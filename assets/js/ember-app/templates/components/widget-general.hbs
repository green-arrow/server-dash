<div class="item col-xl-3 col-lg-3 col-md-2 col-sm-2 col-xs-1"
     data-height='{ "xl": 2, "lg": 2, "md": 2, "sm": 1, "xs": 2 }'
    {{bind-attr data-profile-widget-id="profileWidgetId" data-sort-order="sortOrder"}}>
    <div class="widget-wrapper">
        <div class="handle"></div>
        <div class="header">{{title}}</div>
        <div class="content-wrapper">
            <div class="content">
                <div>OS: {{data.general.os}}</div>
                <div>Uptime: {{data.general.uptime}}</div>
                <div>Server Time: {{data.general.serverTime}}</div>
                <div>Hostname: {{data.general.hostname}}</div>
            </div>
        </div>
    </div>
</div>

