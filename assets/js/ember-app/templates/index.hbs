<div class="sidebar">
    {{#each profile in model}}
        {{profile.name}}
    {{/each}}
</div>

{{#each profile in model}}
    <div class="packery">
        <div class="grid-sizer"></div>
        <div class="gutter-sizer"></div>
        {{#each widget in profile.widgets}}
            <div class="item col-3" data-height='{ "xl": 3, "lg": 3, "md": 3, "sm": 3, "xs": 3 }'>
                <div class="handle"></div>
                <div class="content">
                    {{render-widget widget.name title=widget.displayName data=widgetData}}
                </div>
            </div>
        {{/each}}
    </div>
{{/each}}