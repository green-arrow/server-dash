<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            {{error-alert hasError=hasError header=errorHeader message=errorMessage errorList=errorList}}

            <div class="form-group">
                <label for="email">Email address</label>
                {{input type="email" class="form-control" placeholder="E-mail" value=email}}
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                {{input type="password" class="form-control" placeholder="Password" value=password}}
            </div>
            <button class="btn btn-primary" {{action 'login'}}>Login</button>
        </div>
    </div>
</div>