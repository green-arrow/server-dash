<div class="item col-xl-4 col-lg-4 col-md-3 col-sm-2 col-xs-1"
     data-height='{ "xl": 3, "lg": 3, "md": 2, "sm": 1, "xs": 1 }'
    {{bind-attr data-profile-widget-id="profileWidgetId"
    data-sort-order="sortOrder"
    data-name="name"}}>
    <div class="widget-wrapper">
        <div class="handle"></div>
        <div class="header">{{title}}</div>
        <div class="content-wrapper">
            <div class="content">
                <div class="table-responsive">
                    <table class="table table-bordered table-hover table-condensed">
                        <thead>
                            <tr>
                                <th>FILESYSTEM</th>
                                <th>SIZE</th>
                                <th>USED</th>
                                <th>AVAIL</th>
                                <th>USE%</th>
                                <th>MOUNTED</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each disk in data.diskUsage.diskUsage}}
                                <tr>
                                    <td>{{disk.fileSystem}}</td>
                                    <td>{{disk.size}}</td>
                                    <td>{{disk.used}}</td>
                                    <td>{{disk.available}}</td>
                                    <td>{{disk.capacity}}</td>
                                    <td>{{disk.mounted}}</td>
                                </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    {{yield}}
</div>